.bottomShop{
  position: fixed;
  bottom: 0px;
  left: 0px;
  width: 100%;
  height: 100px;
  background-color: #fff;
  border:1px solid gainsboro;
}
.titleView{
  padding: 10px;
}
.titleView .title{
  float: left;
  width: 50%;
}
.titleView .shopNumView{
  float: left;
  width: 50%;
}
.titleView .shopNumView view{
  float: left;
  width: 30px;
  height: 25px;
  margin: 2px;
  border: 1px solid gainsboro;
  text-align: center;
}
.titleView .shopNumView .no{
  background-color: gainsboro;
}
